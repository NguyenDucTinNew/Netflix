@model websitequanlutours.Models.Tour
@{
    ViewBag.Title = "HienThi";
    Layout = "~/Views/Shared/_layoutMain.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">


    <link rel="stylesheet" href="~/Content/CSS/ChiTietTour.css" />

    <script src="~/Content/JS/ChiTietTour.js"></script>

    <!-- CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Javascript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <script src="https://kit.fontawesome.com/1b0bd3b2f6.js" crossorigin="anonymous"></script>
</head>
<body>
    <div class="container-fluid" id="grand-body">
        <!-- Tên Tour -->
        <div class="container">
            <div id="Tour-title">
                <h1 id="text-important">@Html.DisplayFor(model => model.TenTour)</h1>
            </div>
        </div>
        <div class="container">
            <div class="mt-4" id="tour-image">
                <!-- Carousel -->
                <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-indicators">
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                    </div>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="https://www.w3schools.com/bootstrap5/la.jpg" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="https://www.w3schools.com/bootstrap5/chicago.jpg" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="https://www.w3schools.com/bootstrap5/ny.jpg" class="d-block w-100" alt="...">
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
            <div class="d-flex justify-content-around" id="tour-note">
                <div class="time-spend-group">
                    <div class=""><i class="fas fa-map-marker-alt"></i> Hồ chí minh</div>
                </div>
                <div class="d-flex time-spend-group">
                    <div class="icon"><i class="fa fa-clock-o"></i></div>
                    <div class="day-spend">5</div>
                    <div>Ngày</div>
                    <div class="night-spend">4</div>
                    <div>Đêm</div>
                </div>

                <div class="d-flex time-spend-group">
                    <div>Phương tiện: </div>
                    <div>
                        <span class="fa fa-plane" id="icon-plane" data-bs-toggle="tooltip" data-bs-placement="top" title="Di chuyển bằng phương tiện máy bay"></span>
                    </div>
                    <div>
                        <span class="fa fa-bus" id="icon-bus" data-bs-toggle="tooltip" data-bs-placement="top" title="Di chuyển bằng phương tiện ô tô"></span>
                    </div>
                </div>
                <div>
                    <button class="btnbuyTour" role="button">Đặt Tour</button>
                </div>
            </div>
        </div>

        <hr class="d-sm-none">

        <!-- Thông tin tour -->
        <div class="container">
            <div class="tour-details mt-4" id="tongquan">
                <h2 id="detail-title">
                    Trải Nghiệm Bangkok Theo Cách Của Riêng Bạn
                </h2>

                <p id="detail-info">
                    Bạn thích các chuyến du lịch ngắn ngày hoặc cuối tuần để nạp lại năng lượng với chi phí hợp lý, lịch trình linh hoạt, trải nghiệm vài thứ mới lạ nhưng phải an toàn? Bạn không có thời gian để tự lên kế hoạch và đặt các dịch vụ cho chuyến đi? Dòng Tour City Breaks của iVIVU có thể là một sự lựa chọn phù hợp dành cho riêng bạn. Tour được thiết kế với lịch trình gợi ý thực tế, linh hoạt, chi phí hợp lý, tư vấn tận tình trước khi khởi hành và hỗ trợ bằng tiếng Việt tại điểm đến.

                    Hãy cùng iVIVU khám phá ngay Siam, một khu vực vui chơi sành điệu nhất Bangkok với các trung tâm mua sắm đẳng cấp, giải trí và ẩm thực đa dạng. Di chuyển thuận tiện với nhiều trạm tàu điện BTS trên cao.
                </p>

                <h2 id="detail-title">
                    Những trải nghiệm thú vị trong chương trình
                </h2>

                <p id="detail-info">
                    - <strong>Trải nghiệm Bangkok</strong> theo cách riêng của bạn, an toàn và linh hoạt.
                    <br>
                    - <strong>Sea Life Bangkok Ocean World</strong>: một trong những thủy cung lớn nhất thế giới
                    <br>
                    - <strong>Siam Paragon, Central World</strong>: những trung tâm mua sắm, vui chơi và ẩm thực đẳng cấp.
                    <br>
                    - <strong>MBK</strong>: một trung tâm mua sắm lâu đời nhất và sôi động nhất Thái Lan dành cho giới trẻ.
                    <br>
                    - Cửa hàng <strong>Apple Store</strong> lớn nhất Thái Lan
                </p>

                <h2 id="detail-title">
                    Bạn có sẵn sàng
                </h2>

                <p id="detail-info">
                    - Yêu thích khám phá và trải nghiệm những điều mới lạ như việc di chuyển trong thành phố bằng tàu điện trên cao hay xe Tuk Tuk đặc trưng của Bangkok, thưởng thức các món ăn đường phố...
                    <br>
                    - Tiếng Anh giao tiếp cơ bản
                    <br>
                    - Hộ chiếu còn hạn 6 tháng tính từ ngày kết thúc tour
                </p>
            </div>
        </div>

        <!--  Chương trình gợi ý -->
        <div class="container">
            <div class="tour-details mt-4" id="chuongtrinhgoiy">
                <div>
                    <h2 id="detail-title">
                        Chương trình gợi ý
                    </h2>
                </div>

                <div>
                    <strong>NGÀY 1: TP. HỒ CHÍ MINH - BANGKOK</strong>
                </div>

                <div>
                    Đại diện HUFLIT TOUR đón bạn tại <strong>sân bay Bangkok</strong> đưa về khách sạn.
                </div>

                <div>
                    Thử các món ăn Thái Lan đặc sắc trên đường phố hoặc tại Food Court trong trung tâm thương mại như <strong>Central World</strong> với nhiều lựa chọn hấp dẫn như bữa ăn chuẩn Michelin tại Street Food Deck với giá rất hợp lý.
                </div>

                <div id="detail-img">
                    <img src="https://cdn2.ivivu.com/2023/01/17/10/ivivu-central-world-bangkok.gif">
                    <div>
                        Central World.
                    </div>
                </div>

                <div>
                    Tham quan <strong>Jim Thompson's House</strong> - một kiến trúc nhà kiểu Thái truyền thống tuyệt đẹp và là một bảo tàng thu nhỏ về cuộc sống của người Thái ngày xưa.
                </div>
            </div>
        </div>


        <!-- Lịch khởi hành -->
        <div class="container">
            <div class="tour-details mt-4" id="lichkhoihanh">
                <h2 id="detail-title">
                    Lịch khởi hành
                </h2>

                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Ngày khởi hành</th>
                            <th>Ngày về</th>
                            <th>Tình trạng chỗ</th>
                            <th>Giá</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>T4, 12/04/2023</td>
                            <td>T6, 14/04/2023</td>
                            <td>Liên hệ</td>
                            <td>4.890.000</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="container">
            <div class="tour-details mt-4" id="thongtinvisa">
                <h2 id="detail-title">
                    Thông tin Visa
                </h2>

                <div>
                    Visa Thái Lan là visa đoàn ( Nên sẽ không đóng mọc trong hộ chiếu, và cũng không có mặt visa cho từng khách, mặt visa là 1 tờ giấy A4 như mặt vé máy bay)
                </div>

                <br>
                <div>
                    Quý khách chỉ cần hộ Việt Nam còn nguyên vẹn và có hạn sử dụng ít nhất 6 tháng tính từ ngày kết thúc tour.
                </div>

                <br>
                <div>
                    Scan: Hộ chiếu + 2 hình 4*6 nền trắng.
                </div>
            </div>
        </div>

        <div class="container">
            <div class="tour-details mt-4" id="thongtinvisa">
                <h2 id="detail-title">
                    Hướng dẫn viên
                </h2>

                <div>
                    Hướng Dẫn Viên (HDV) sẽ liên lạc với Quý Khách khoảng 2-3 ngày trước khi khởi hành để sắp xếp giờ đón và cung cấp các thông tin cần thiết cho chuyển đi. HDV làm thủ tục hàng không, nhận phòng khách sạn, sắp xếp các bữa ăn và đồng hành suốt chuyến đi.
                </div>
            </div>
        </div>
    </div>
</body>
</html>
