                        <div class="logo col-2">
                            <a class="navbar-brand" href="#">HUFLIT TOUR</a>
                        </div>
                        <!-- End Logo Navbar  -->
                        <!-- Link Navbar  -->
                        <div class="container-fluid">
                            <ul class="nav nav-tabs nav-justified navbar-expand-sm justify-content-center">

                                <li class="nav-item">
                                    <a class="nav-link " href="/Home/Index">Trang chủ</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link " href="#">Tour</a>
                                </li>

                                <!--  Search Bar  -->
                                <li class="d-flex">
                                    <form>
                                        <input type="text" name="search" placeholder="Search.." class="searchbar">
                                    </form>
                                </li>
                                <!--  End Search Bar  -->
                                <!--  Account Setup  -->
                                <li class="nav-item d-flex">
                                    <button class="login ">Đăng nhập</button>
                                    <button class="signup ">Đăng ký</button>
                                </li>
                                <!--  End Account Setup  -->

                            </ul>
                        </div>
                        <!-- End Link Navbar-->

                    </div>
                </nav>
                <!--  End Header Nav  -->

            </div>
        </div>
    </header>

    <!--  Section  -->
    <section>
        <div class="container-fuild middle-layout" style="margin-top:40px">
