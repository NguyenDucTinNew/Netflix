
<!DOCTYPE html>

<html>
<head>

    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="~/Scripts/jquery-3.6.3.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <link rel="stylesheet" href="~/Content/CSS/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Spartan:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Kaushan+Script&display=swap" rel="stylesheet">
    <script src="validate.js"></script>
</head>
<body>
    <header class="p-3 mb-3 border-bottom">
        <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
            <div class="container-fluid">
                <div class="container">
                    <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start ">
                        <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-dark text-decoration-none">
                            <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap" /></svg>
                        </a>

                        <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0 ">
                            <li><a href="/home/index" class="nav-link px-2 link-secondary">Trang chủ</a></li>
                            <li><a href="/TourPage/Index" class="nav-link px-2 text-white">Tour</a></li>
                            <li><a href="/home/lienhe" class="nav-link px-2 text-white">Liên hệ</a></li>
                            <li><a href="/home/gioithieu" class="nav-link px-2 text-white">Giới thiệu</a></li>
                        </ul>

                        <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3">
                            <input type="search" class="form-control" placeholder="Search..." aria-label="Search">
                        </form>

                        <div class="dropdown text-end ">
                            @if (User.Identity.IsAuthenticated)
                            {


                                <a href="#" class="d-block link-light text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                                    Hello @User.Identity.Name
                                    <img src="https://github.com/mdo.png" alt="mdo" width="32" height="32" class="rounded-circle">
                                </a>
                                @*                                    <div style="color:red;font-weight:bold">   </div>
                                *@}



                            @if (User.Identity.IsAuthenticated)
                            {
                                @*<li class="nav-item">
                                        <a class="nav-link" href="/Account/logout">Đăng xuất</a>
                                    </li>*@

                                <ul class="dropdown-menu text-small" aria-labelledby="dropdownUser1">

                                    <li><a class="dropdown-item" href="/GioHang/Index">Giỏ hàng</a></li>
                                    <li><a class="dropdown-item" href="#">Settings</a></li>
                                    <li><a class="dropdown-item" href="#">Profile</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="/Account/logout">Sign out</a></li>

                                </ul>
                            }
                            else
                            {
                                <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0 ">
                                    <li class="nav-item">
                                        <a class="nav-link px-2  dangkydangnhap" href="/Account/DangKy">Đăng ký</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link px-2  dangkydangnhap" href="/Account/DangNhap">Đăng nhập</a>
                                    </li>
                                </ul>

                                @*   <div class="text-end">
                                        <button type="button" class="btn btn-outline-light me-2" >Đăng nhập</button>
                                        <button type="button" class="btn btn-warning">Đăng ký</button>
                                    </div>*@
                            }
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <main>
        <div class="overlay"></div>
        @RenderBody()

        <body>
            <div class="overlay"></div>
            <div>
                <div class="overlay"></div>

            </div>
        </body>
</html>
