@model websitequanlutours.Models.Tour
@{
    ViewBag.Title = "HienThi";
    Layout = "~/Views/Shared/_layoutMain.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">

<!-- Javascript -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

<!-- FontAwesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<link rel="stylesheet" href="~/Content/CSS/ChiTietTour.css" />

<script src="~/Content/JS/ChiTietTour.js"></script>

<body>
    <div class="container mt-5">

        <!-- Tên Tour -->
        <div id="Tour-title">
            <h1 id="text-important">Tour Bangkok City Break 3N2Đ: Khám Phá Siam Thời Thượng</h1>
        </div>
        <div class="d-flex">
            <div class="tour-image col-sm-8">
                <!-- Carousel -->
                <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-indicators">
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                    </div>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="https://www.w3schools.com/bootstrap5/la.jpg" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="https://www.w3schools.com/bootstrap5/la.jpg" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="https://www.w3schools.com/bootstrap5/la.jpg" class="d-block w-100" alt="...">
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>

                <div class="d-flex justify-content-around" id="tour-note">
                    <div class="fas fa-map-marker-alt">Hồ chí minh</div>
                    <ul class="list-group list-group-horizontal">
                        <li class="list-group-item fa fa-clock-o"></li>
                        <li class="list-group-item" id="day-go">5 </li>
                        <li class="list-group-item">Ngày </li>
                        <li class="list-group-item" id="night-go">4 </li>
                        <li class="list-group-item">Đêm </li>
                    </ul>
                    <ul class="list-group list-group-horizontal">
                        <li class="list-group-item">Phương tiện: </li>
                        <li class="list-group-item">
                            <span class="fa fa-plane" id="icon-plane" data-bs-toggle="tooltip" data-bs-placement="top" title="Di chuyển bằng phương tiện máy bay"></span>
                        </li>
                        <li class="list-group-item">
                            <span class="fa fa-bus" id="icon-bus" data-bs-toggle="tooltip" data-bs-placement="top" title="Di chuyển bằng phương tiện ô tô"></span>
                        </li>
                    </ul>
                    <p>ID Tour: </p>
                    <h2 class="id-tour">123</h2>
                </div>
            </div>

            <!-- Giá tour -->
            <div class="tour-price col-sm-4 sticky-top">
                <h2 id="text-important">Lịch khởi hành & giá</h2>
                <p>Chọn ngày khởi hành:</p>
                <div class=" mt-sm-2 d-flex justify-content-around" id="date-group">
                    <button id="date-item"><p class="date-picker">14/5</p></button>
                    <button id="date-item"><p class="date-picker">15/5</p></button>
                    <button id="date-item"><p class="date-picker">16/5</p></button>
                    <input placeholder="Tất cả" class="date-picker textbox-n" type="text" onfocus="(this.type='date')" onblur="(this.type='text')" id="date-item" />
                </div>

                <!-- Giá người lớn -->
                <div class="d-flex justify-content-around" id="price-group">
                    <p>Người lớn: </p>
                    <p class="price" id="price-adult">4800000</p>
                    <form id='quantityform' method='POST' class='quantity' action='#'>
                        <input type='button' value='-' onclick='decreaseCount(event,this);totalprice()' class='qtyminus minus' field='quantity' />
                        <input type='text' name='quantity' value='1' class='qty' id="quantity-adult" />
                        <input type='button' value='+' onclick='increaseCount(event,this);totalprice()' class='qtyplus plus' field='quantity' />
                    </form>
                </div>

                <!-- Giá trẻ em -->
                <div class="d-flex justify-content-around" id="price-group">
                    <p>Trẻ em: </p>
                    <p class="price" id="price-children">4800000</p>
                    <form id='quantityform' method='POST' class='quantity' action='#'>
                        <input type='button' value='-' onclick='decreaseCount(event,this);displaychildrenprice();totalprice()' class='qtyminus minus' field='quantity' />
                        <input type='text' name='quantity' value='0' class='qty' id="quantity-children" />
                        <input type='button' value='+' onclick='increaseCount(event,this);displaychildrenprice();totalprice()' class='qtyplus plus' field='quantity' />
                    </form>
                </div>

                <!-- Tổng cộng -->
                <div class="d-flex justify-content-around" id="Total-group">
                    <p>Tổng cộng: <span id="total_price"></span></p>
                </div>
            </div>
        </div>

        <hr class="d-sm-none">

        <!-- Thông tin tour -->
        <div class="tour-details mt-4 col-sm-8" id="tongquan">
            <div class="container">
                <h2 id="detail-title">
                    Trải Nghiệm Bangkok Theo Cách Của Riêng Bạn
                </h2>

                <p id="detail-info">
                    Bạn thích các chuyến du lịch ngắn ngày hoặc cuối tuần để nạp lại năng lượng với chi phí hợp lý, lịch trình linh hoạt, trải nghiệm vài thứ mới lạ nhưng phải an toàn? Bạn không có thời gian để tự lên kế hoạch và đặt các dịch vụ cho chuyến đi? Dòng Tour City Breaks của iVIVU có thể là một sự lựa chọn phù hợp dành cho riêng bạn. Tour được thiết kế với lịch trình gợi ý thực tế, linh hoạt, chi phí hợp lý, tư vấn tận tình trước khi khởi hành và hỗ trợ bằng tiếng Việt tại điểm đến.

                    Hãy cùng iVIVU khám phá ngay Siam, một khu vực vui chơi sành điệu nhất Bangkok với các trung tâm mua sắm đẳng cấp, giải trí và ẩm thực đa dạng. Di chuyển thuận tiện với nhiều trạm tàu điện BTS trên cao.
                </p>

                <h2 id="detail-title">
                    Những trải nghiệm thú vị trong chương trình
                </h2>

                <p id="detail-info">
                    - <strong>Trải nghiệm Bangkok</strong> theo cách riêng của bạn, an toàn và linh hoạt.
                    <br>
                    - <strong>Sea Life Bangkok Ocean World</strong>: một trong những thủy cung lớn nhất thế giới
                    <br>
                    - <strong>Siam Paragon, Central World</strong>: những trung tâm mua sắm, vui chơi và ẩm thực đẳng cấp.
                    <br>
                    - <strong>MBK</strong>: một trung tâm mua sắm lâu đời nhất và sôi động nhất Thái Lan dành cho giới trẻ.
                    <br>
                    - Cửa hàng <strong>Apple Store</strong> lớn nhất Thái Lan
                </p>

                <h2 id="detail-title">
                    Bạn có sẵn sàng
                </h2>

                <p id="detail-info">
                    - Yêu thích khám phá và trải nghiệm những điều mới lạ như việc di chuyển trong thành phố bằng tàu điện trên cao hay xe Tuk Tuk đặc trưng của Bangkok, thưởng thức các món ăn đường phố...
                    <br>
                    - Tiếng Anh giao tiếp cơ bản
                    <br>
                    - Hộ chiếu còn hạn 6 tháng tính từ ngày kết thúc tour
                </p>
            </div>
        </div>

        <div class="tour-details mt-4 col-sm-8" id="chuongtrinhgoiy">
            <div class="container">

                <div>
                    <h2 id="detail-title">
                        Chương trình gợi ý
                    </h2>
                </div>

                <div>
                    <strong>NGÀY 1: TP. HỒ CHÍ MINH - BANGKOK</strong>
                </div>

                <div>
                    Đại diện HUFLIT TOUR đón bạn tại <strong>sân bay Bangkok</strong> đưa về khách sạn.
                </div>

                <div>
                    Thử các món ăn Thái Lan đặc sắc trên đường phố hoặc tại Food Court trong trung tâm thương mại như <strong>Central World</strong> với nhiều lựa chọn hấp dẫn như bữa ăn chuẩn Michelin tại Street Food Deck với giá rất hợp lý.
                </div>

                <div id="detail-img">
                    <img src="https://cdn2.ivivu.com/2023/01/17/10/ivivu-central-world-bangkok.gif">
                    <div>
                        Central World.
                    </div>
                </div>

                <div>
                    Tham quan <strong>Jim Thompson's House</strong> - một kiến trúc nhà kiểu Thái truyền thống tuyệt đẹp và là một bảo tàng thu nhỏ về cuộc sống của người Thái ngày xưa.
                </div>
            </div>
        </div>

        <div class="tour-details mt-4 col-sm-8" id="lichkhoihanh">
            <div class="container">
                <div class="d-flex justify-content-between">
                    <h2 id="detail-title">
                        Lịch khởi hành
                    </h2>
                    <input placeholder="Tất cả" class="textbox-n" type="text" onfocus="(this.type='date')" onblur="(this.type='text')" id="date-item" />
                </div>

                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Ngày khởi hành</th>
                            <th>Ngày về</th>
                            <th>Tình trạng chỗ</th>
                            <th>Giá</th>
                        </tr>
                    </thead>
                    <tbody>
                        <a href="">
                        <tr>
                            <td>T4, 12/04/2023</td>
                            <td>T6, 14/04/2023</td>
                            <td>Liên hệ</td>
                            <td>4.890.000</td>
                        </tr>
                        </a>
                        <a href="">
                        <tr>
                            <td>T4, 12/04/2023</td>
                            <td>T6, 14/04/2023</td>
                            <td>Liên hệ</td>
                            <td>4.890.000</td>
                        </tr>
                        </a>
                        <a href="">
                        <tr>
                            <td>T4, 12/04/2023</td>
                            <td>T6, 14/04/2023</td>
                            <td>Liên hệ</td>
                            <td>4.890.000</td>
                        </tr>
                        </a>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>