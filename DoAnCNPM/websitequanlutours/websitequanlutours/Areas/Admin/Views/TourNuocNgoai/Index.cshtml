@model List<WebsiteQuanLyTours.Models.TourNuocNgoai>

@{
    ViewBag.Title = "Index";
 
}

<h2>Index</h2>

<a href="/Admin/TourNuocNgoai/ThemMoi">Thêm mới </a>
<form class="d-flex-row align-items-center flex-wrap" action="/Admin/TourNuocNgoai/index">
    <label for="search" class="mx-2 my-1">Search</label>
    <input type="search" class="form-control w-auto" id="search" name="search" placeholder="Search" value="@ViewBag.search" />
    <button type="submit" class=" btn btn-primary mx-2 ">go</button>
</form>
<table class="table">
    <tr>
        <th>Mã tour nước ngoài</th>
        <th>Tour nước ngoài</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.MaTourNuocNgoai</td>
            <td>@item.TourNuocNgoai1</td>
            <td><a href="/Admin/TourNuocNgoai/ChinhSua/@item.MaTourNuocNgoai">Edit</a></td>
            <td><a href="/Admin/TourNuocNgoai/Xoa/@item.MaTourNuocNgoai">Delete</a></td>
        </tr>
    }
</table>