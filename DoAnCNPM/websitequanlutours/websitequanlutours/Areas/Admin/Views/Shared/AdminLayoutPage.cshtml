<!DOCTYPE html>

<html>
<head>
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <script src="~/Scripts/jquery-3.6.3.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery-3.6.4.min.js"></script>

    <title>@ViewBag.Title</title>
</head>
<body>

    <nav class="navbar navbar-expand-sm bg-info navbar-dark>
        <a class="navbar-brand" href="#">Admin</a>
        <div class="col-8">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/home/index">Trang chủ</a>
                </li>
                

                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a class="nav-link" href="/Account/logout">Đăng xuất</a>
                    </li>
                }
  
            </ul>

        </div>
        @ViewBag.Message

        @if (User.Identity.IsAuthenticated)
        {
            <div style="color:red;font-weight:bold">
                Hello @User.Identity.Name
            </div>
        }
    </nav>
    <div class="container-fluid">
        <div class="row">
            <div class="col-2 text-white" style=" background-color:#5bb2f0;min-height:2050px;padding:0">
                <a href="/admin/QuanLyTours/index" class="list-group-item text-white" style="color:transparent">QUẢN LÝ TUORS </a>
                <a href="/admin/users/index" class="list-group-item text-white" style="color:transparent">QUẢN LÝ USERS </a>
                <a href="#" class="list-group-item text-white" style="color:transparent">QUẢN LÝ HÓA ĐƠN </a>

                @*
                    required : false khong bao loi khi gap trang kh view dinh dang
                *@

                @RenderSection("SideBarQuanLyTours", required: false)

            </div>
            <div class="col-8" style="min-height:610px;">
                @RenderBody()
            </div>
        </div>
    </div>
    <style>
        .field-validation-error {
            color: red;
        }
        a:hover{
          
            background-color:blanchedalmond;
        }
    </style>
</body>
</html> 