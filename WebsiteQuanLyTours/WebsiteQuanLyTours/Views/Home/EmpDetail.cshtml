
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/Content/bootstrap.css" rel="stylesheet"
    <meta charset="utf-8"
    <meta name="viewport" content="width=device-width" />
    <title>EmpDetail</title>
</head>
<body>
    <div>
        <ul>
            <li>
                <a href="/home/index">Trang chủ</a>
            </li>
            <li>
                <a href="/home/tours">Tours</a>
            </li>
            <li>
                <a href="/home/lienhe">Liên hệ</a>
            </li>
        </ul>
        @{ 
            string gender;
            if(ViewBag.Gender == "M")
            {
                gender = "Male";

            }
            else
            {
                gender = "Female";
            }
        }
    <table>
        <tr>
            <td>Employee ID</td>
            <td>@ViewBag.EmpID</td>
        </tr>
        <tr>
            <td>Employee Name</td>
            <td>@ViewBag.Name</td>
        </tr>
        <tr>
            <td>Employee Salary</td>
            <td>@ViewBag.Salary</td>
        </tr>
        <tr>
            <td>Employee Gender</td>
            <td>@gender</td>
        </tr>
        <tr>
            <td>
                @if (ViewBag.Salary > 2000)
                {
                <span>good</span>
                }
                else 
                {
                    <span>you have to work hander</span>
                }
            </td>
        </tr>
        <tr>
            <td>Years</td>
            <td>
                <u>
                @for (int i= ViewBag.Year; i<= DateTime.Now.Year; i++)
            {
                    <li>
                        @i
                    </li>
               
            }

                </u>
            </td>
        </tr>
        <tr>
            <td>positions</td>
            <td>
                <ul>

                @foreach (var pos in ViewBag.Positions)
            {
                    <li>
                         @pos
                    </li>
            }
                </ul>
            </td>
        </tr>
    </table>
    </div>
</body>
</html>
